<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.IntentsDemo.MainActivity" >

    <Button
        android:id="@+id/start_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:text="@string/start_second_activity"
        android:onClick="startSecondActivity" />    
   <Button
        android:id="@+id/start_implicit_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_second_activity"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:text="@string/start_implicit_second_activity"
        android:onClick="startImplicitSecondActivity" />

    <Button
        android:id="@+id/view_webpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_implicit_second_activity"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:text="@string/view_webpage"
        android:onClick="viewWebpage"
        />

    <Button
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_webpage"
        android:layout_centerHorizontal="true"
        android:minWidth="300dp"
        android:text="@string/share_text"
        android:onClick="shareText"
        />

</RelativeLayout>
